<form onsubmit="return false" class="d-flex align-items-center flex-column">
  <div class="mb-3">
    <input
      type="text"
      id="productos"
      placeholder="Producto"
      name="name"
    />
  </div>
  <div class="mb-3">
    <input
      type="text"
      id="precio"
      placeholder="Precio"
      name="price"
    />
  </div>
  <div class="mb-3">
    <input
      type="text"
      id="imagen"
      placeholder="URL de imagen"
      name="thumbnail"
    />
  </div>
  <button type="submit" onclick="botonProd()" class="btn btn-secondary">Subir producto</button>
</form>